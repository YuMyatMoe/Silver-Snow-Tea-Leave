<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>View Appointment</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">


<style>

body {
    background-color: blanchedalmond;
}

nav {
  text-align: center;
}

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #3CB371;
}

li {
  font-size: 18px;
  float: left;
}

li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

li a:hover {
  background-color: #FFA500;
}

h1 {
  font-size: 45px;
  color: midnightblue;
  text-align: center;
}


table {  
  border: 3px solid;
  border-color: green;
  border-collapse: collapse;
  width: 100%;
 } 


th {
  text-align: center;
  font-size: 20px;
}

td {
  font-size: 18px;
}


th, td {
  padding: 12px;
}

button[type=submit] {
  background-color: #FFD700;
  border: none;
  color: black;
  padding: 12px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  cursor: pointer;
}

button[type=delete] {
  border: 2px solid #f44336;
  color: black;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  transition-duration: 0.4s;
  cursor: pointer;
}

form {
  display: inline-block;
  margin:10px;
}

button[type=submit]:hover {
  background-color: #4CAF50;
}

button[type=delete]:hover {
  background-color: #f44336;
}

</style>

</head>





  <body>

  <nav>
    <ul>
      <li><a href="https://newsilver.herokuapp.com/admin">Home</a></li>
      <li><a href="https://newsilver.herokuapp.com/admin/merchants">View Merchants</a></li>
      <li><a href="https://newsilver.herokuapp.com/admin/appointments">View Appointments</a></li>
      <li><a href="https://newsilver.herokuapp.com/logout">Logout</a></li>
    </ul>
  </nav>

  <h1>Appointment Lists</h1>

  
  <table cellspacing="1" cellpadding="5" border="1">
    <tr>
    
    <th>Name</th>
    <th>Date</th>
    <th>Time</th>   
    <th>Comment</th>
    <th>Confirmed</th>
    <th>Action</th>
  </tr>

  <% data.forEach(function(appointment){ %>
     <tr>
      
       <td><%= appointment.name %></td>
       <td><%= appointment.date %></td>
       <td><%= appointment.time %></td>
       <td><%= appointment.comment %></td> 
       <td><%= appointment.confirmed ? "yes" : "no" %></td> 
     
      
        <!-- <td><a href="../admin/addstock/<%= appointment.id %>">Confirm </td> -->
        <td>
          <% if(!appointment.confirmed) { %> 
            <form action="/admin/appointments" method="POST">
              <input name ="id" value="<%= appointment.id %>" hidden />
              <input name ="status" value="confirm" hidden />
              <button type="submit">Confirm</button>
            </form>
          <%} %>

            <form action="/admin/appointments" method="POST">
              <input name ="id" value="<%= appointment.id %>" hidden />
              <input name ="status" value="delete" hidden />
              <button type="delete">Delete</button>
            </form>
        </td>
          

    </tr>
    

  <% }); %>


  
	</table>

 
 

  </body>

</html>