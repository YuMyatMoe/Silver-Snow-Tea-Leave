<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Payment Record</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">


<style>

body {
    background-color: aquamarine;
}

h1 {
  font-size: 45px;
  color: midnightblue;
  text-align: center;
}

p {
  text-indent: 80px;
  text-align: justify;
}  

input[type=number], select {
  width: 30%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

input[type=date], select {
  width: 30%;
  padding: 12px 20px;
  margin: 20px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

input[type=submit] {
  width: 10%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin-left: 10%;
  margin-right:10%;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=submit]:hover {
  background-color: #008080;
}

form {
  margin-left: 35%;
  margin-right:35%;
  width: 100%;
}

</style> 

</head>


  <body>
  <h1>Payment Record</h1>

  <p>Merchant Name: <%= merchant.merchant_name %> <p>
  <p>Total Sale: <%= merchant.total_sale %> <p>
  <p>Total Paid: <%= merchant.total_paid %> <p>
  <p>Total Balance: <%= merchant.total_balance %> <p>


  <form id="form" action="../../admin/savepayment" method="post">
    <label for="name">Amount</label> 
    <input type="number" name="amount"/> <br>

    <label for="name">Date</label>
    <input type="date" name="date"/> <br>
     
     <input type="hidden" name="total_sale" value="<%= merchant.total_sale %>"/>
     <input type="hidden" name="merchant_id" value="<%= merchant.merchant_id %>"/>
     <input type="submit" name="submit"/>
  </form>

  <h3>History</h3>
  <table cellspacing="1" cellpadding="5" border="1">
    <tr>    
      <th>Date</th>
      <th>Amount</th>    
    </tr>

    <% merchant.payment_logs.forEach(function(payment){ %>
       <tr>        
         <td><%= payment.date %></td>
         <td><%= payment.amount %></td>         
       </tr>
    <% }); %>

  
  </body>


</html>