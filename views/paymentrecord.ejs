<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Payment Record</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">


<style>

body {
    background-color: aquamarine;
}

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #3CB371;
}

li {
  font-size: 18px;
  float: left;
}

li a {
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

li a:hover {
  background-color: #FFA500;
}

h1 {
  font-size: 45px;
  color: midnightblue;
  text-align: center;
}

p {
  text-indent: 80px;
  text-align: justify;
  font-family: Arial, Helvetica, sans-serif;
}  

input[type=number], select {
  width: 30%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

input[type=date], select {
  width: 30%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

input[type=submit] {
  width: 10%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 10px;
  margin-left: 10%;
  margin-right:10%;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=submit]:hover {
  background-color: #008080;
}

form {
  margin-left: 35%;
  margin-right:35%;
  width: 100%;
}

</style> 

</head>


  <body>

  <nav>
    <ul>
      <li><a href="https://newsilver.herokuapp.com/admin/merchants">Merchants Lists</a></li>
      <li><a href="https://newsilver.herokuapp.com/admin/addstock/<%= data.merchant_id %>">Add Stock</a></li>
      <li><a href="https://newsilver.herokuapp.com/admin/stocklist/<%= merchant.merchant_id %>">Stock Lists</a></li>
      <li><a href="https://newsilver.herokuapp.com/admin/salesrecord/<%= merchant.merchant_id %>">Sales Record</a></li>
      <li><a href="https://newsilver.herokuapp.com/admin/payment/<%= merchant.merchant_id %>">Payment History</a></li>
    </ul>
  </nav>

  <h1>Payment Record</h1>

  <p>Merchant Name: <%= merchant.merchant_name %> <p>
  <p>Total Sale: <%= merchant.total_sale %> <p>
  <p>Total Paid: <%= merchant.total_paid %> <p>
  <p>Total Balance: <%= merchant.total_balance %> <p>


  <form id="form" action="../../admin/savepayment" method="post">
    <label for="name">Amount</label> <br>
    <input type="number" name="amount"/> <br>

    <label for="name">Date</label> <br>
    <input type="date" name="date"/> <br>
     
     <input type="hidden" name="total_sale" value="<%= merchant.total_sale %>"/>
     <input type="hidden" name="merchant_id" value="<%= merchant.merchant_id %>"/> <br>
     <input type="submit" name="submit"/>
  </form>

  <h3>History</h3>
  <table cellspacing="1" cellpadding="5" border="1">
    <tr>    
      <th>Date</th>
      <th>Amount</th>    
    </tr>

    <% merchant.payment_logs.forEach(function(payment){ %>
       <tr>        
         <td><%= payment.date %></td>
         <td><%= payment.amount %></td>         
       </tr>
    <% }); %>

  
  </body>


</html>