<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Sale Record</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">


<style>

body {
    background-color: aquamarine;
}

h1 {
  font-size: 45px;
  color: midnightblue;
  text-align: center;
}

p {
  text-indent: 80px;
  text-align: justify;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 20px;
  color: purple;
}     

table {  
  border: 3px solid;
  border-color: black;
  border-collapse: collapse;
  width: 100%;
 } 

th {
  text-align: center;
  font-size: 20px;
}

td {
  font-size: 18px;
}

th, td {
  padding: 15px;
}



</style>

</head>


<body>

  <h1>Sale Record</h1>

  <p>
    Merchant Name: <%= merchant.merchant_name %>
  <p>
  
  <table cellspacing="1" cellpadding="5" border="1">
    <tr>
    
    <th>id</th>
    <th>Date</th>
    <th>Batch Id</th>       
    <th>Type</th>
    <th>Qty</th>  
    <th>Amount</th>
  
  </tr>

  <% data.forEach(function(sale){ %>
    <tr>
      
       <td><%= sale.id %></td>
       <td><%= sale.date %></td>
       <td><%= sale.batch_id %></td>
       <td><%= sale.type %></td>
       <td><%= sale.qty %></td>
       <td><%= sale.amount %></td>      
       
     
    </tr>
  <% }); %>


  

	</table>

 
 

  </body>

</html>